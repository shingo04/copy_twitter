<div class="home-header">
  <div class="show-home">
    <%= link_to "←", root_path, class: "back-btn" %>
    <div>スレッド</div>
  </div>
</div>
<div class="one-tweet">
  <div class="tweet-user">
    <div class="user-icon">

    </div>
    <div class="name-tweet">
      <div class="user-name">
        <%= @tweet.user.nickname %>
      </div>
      <div class="tweet-text">
        <%= @tweet.text %>
      </div>
      <% if @tweet.image.attached? %>
        <div class="show-tweet-image">
          <%= image_tag @tweet.image, width: '100%', height: '100%' %>
        </div>
      <% end %>
    </div>
  </div>
</div>